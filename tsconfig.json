{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "declaration": true,
    "traceResolution": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": [
      "mocha",
      "node"
    ],
    "lib": [
      "es2016"
    ]
  },
  "files": [
    "node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}